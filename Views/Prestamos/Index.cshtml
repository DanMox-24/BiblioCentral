@model IEnumerable<SistemaBiblioteca.Models.Prestamo>

@{
    ViewData["Title"] = "Préstamos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-hand-holding me-2 text-primary"></i>Gestión de Préstamos</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nuevo Préstamo
    </a>
</div>

<!-- Estadísticas rápidas -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-hand-holding fa-2x mb-2"></i>
                <h4>@Model.Count(p => p.Estado == "Activo")</h4>
                <p class="mb-0">Préstamos Activos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                <h4>@Model.Count(p => p.EstaVencido)</h4>
                <p class="mb-0">Préstamos Vencidos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-check-circle fa-2x mb-2"></i>
                <h4>@Model.Count(p => p.Estado == "Devuelto")</h4>
                <p class="mb-0">Préstamos Devueltos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="fas fa-list fa-2x mb-2"></i>
                <h4>@Model.Count()</h4>
                <p class="mb-0">Total de Préstamos</p>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de préstamos -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Historial de Préstamos</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-book me-1"></i>Libro</th>
                            <th><i class="fas fa-user me-1"></i>Usuario</th>
                            <th><i class="fas fa-calendar-alt me-1"></i>Fecha Préstamo</th>
                            <th><i class="fas fa-calendar-check me-1"></i>Fecha Devolución</th>
                            <th><i class="fas fa-info-circle me-1"></i>Estado</th>
                            <th><i class="fas fa-cogs me-1"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prestamo in Model)
                        {
                            <tr class="@(prestamo.EstaVencido ? "table-danger" : "")">
                                <td>
                                    <strong>@prestamo.Libro?.Titulo</strong>
                                    <br>
                                    <small class="text-muted">por @prestamo.Libro?.Autor</small>
                                </td>
                                <td>
                                    <i class="fas fa-user-circle me-1"></i>@prestamo.NombreUsuario
                                </td>
                                <td>
                                    <i class="fas fa-calendar me-1"></i>@prestamo.FechaPrestamo.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <i class="fas fa-calendar me-1"></i>@prestamo.FechaDevolucion.ToString("dd/MM/yyyy")
                                    @if (prestamo.EstaVencido)
                                    {
                                        <br>
                                        <small class="text-danger">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Vencido
                                        </small>
                                    }
                                </td>
                                <td>
                                    @switch (prestamo.Estado)
                                    {
                                        case "Activo":
                                            <span class="badge bg-primary">
                                                <i class="fas fa-clock me-1"></i>Activo
                                            </span>
                                            break;
                                        case "Devuelto":
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Devuelto
                                            </span>
                                            break;
                                        case "Vencido":
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Vencido
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@prestamo.Estado</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@prestamo.Id"
                                           class="btn btn-outline-primary" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (prestamo.Estado == "Activo")
                                        {
                                            <button type="button" class="btn btn-outline-success"
                                                    onclick="marcarDevuelto(@prestamo.Id)" title="Marcar como devuelto">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }

                                        <a asp-action="Edit" asp-route-id="@prestamo.Id"
                                           class="btn btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@prestamo.Id"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-hand-holding fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay préstamos registrados</h4>
                <p class="text-muted">Comienza creando tu primer préstamo.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Crear Primer Préstamo
                </a>
            </div>
        }
    </div>
</div>

<!-- Modal de confirmación para marcar como devuelto -->
<div class="modal fade" id="modalDevolucion" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-check-circle me-2 text-success"></i>Confirmar Devolución
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que quieres marcar este préstamo como devuelto?</p>
                <p class="text-muted">Esta acción marcará el libro como disponible nuevamente.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="formDevolucion" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-2"></i>Marcar como Devuelto
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function marcarDevuelto(prestamoId) {
            document.getElementById('formDevolucion').action = '@Url.Action("MarcarDevuelto")/' + prestamoId;
            new bootstrap.Modal(document.getElementById('modalDevolucion')).show();
        }
    </script>
}