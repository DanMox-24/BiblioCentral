@model IEnumerable<SistemaBiblioteca.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-bookmark me-2 text-primary"></i>Gestión de Reservas</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nueva Reserva
    </a>
</div>

<!-- Estadísticas rápidas -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <i class="fas fa-bookmark fa-2x mb-2"></i>
                <h4>@Model.Count(r => r.Estado == "Activa")</h4>
                <p class="mb-0">Reservas Activas</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-2x mb-2"></i>
                <h4>@Model.Count(r => r.EstaExpirada)</h4>
                <p class="mb-0">Reservas Expiradas</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-check-circle fa-2x mb-2"></i>
                <h4>@Model.Count(r => r.Estado == "Convertida")</h4>
                <p class="mb-0">Convertidas a Préstamo</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="fas fa-list fa-2x mb-2"></i>
                <h4>@Model.Count()</h4>
                <p class="mb-0">Total de Reservas</p>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de reservas -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Lista de Reservas</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-book me-1"></i>Libro</th>
                            <th><i class="fas fa-user me-1"></i>Usuario</th>
                            <th><i class="fas fa-calendar-alt me-1"></i>Fecha Reserva</th>
                            <th><i class="fas fa-calendar-times me-1"></i>Fecha Expiración</th>
                            <th><i class="fas fa-info-circle me-1"></i>Estado</th>
                            <th><i class="fas fa-cogs me-1"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserva in Model)
                        {
                            <tr class="@(reserva.EstaExpirada ? "table-warning" : "")">
                                <td>
                                    <strong>@reserva.Libro?.Titulo</strong>
                                    <br>
                                    <small class="text-muted">por @reserva.Libro?.Autor</small>
                                </td>
                                <td>
                                    <i class="fas fa-user-circle me-1"></i>@reserva.NombreUsuario
                                </td>
                                <td>
                                    <i class="fas fa-calendar me-1"></i>@reserva.FechaReserva.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <i class="fas fa-calendar me-1"></i>@reserva.FechaExpiracion.ToString("dd/MM/yyyy")
                                    @if (reserva.EstaExpirada && reserva.Estado == "Activa")
                                    {
                                        <br>
                                        <small class="text-warning">
                                            <i class="fas fa-exclamation-triangle me-1"></i>A punto de expirar
                                        </small>
                                    }
                                </td>
                                <td>
                                    @switch (reserva.Estado)
                                    {
                                        case "Activa":
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Activa
                                            </span>
                                            break;
                                        case "Convertida":
                                            <span class="badge bg-success">
                                                <i class="fas fa-arrow-right me-1"></i>Convertida
                                            </span>
                                            break;
                                        case "Cancelada":
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times me-1"></i>Cancelada
                                            </span>
                                            break;
                                        case "Expirada":
                                            <span class="badge bg-danger">
                                                <i class="fas fa-clock me-1"></i>Expirada
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark">@reserva.Estado</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@reserva.Id"
                                           class="btn btn-outline-primary" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (reserva.Estado == "Activa" && reserva.Libro != null && reserva.Libro.Disponible)
                                        {
                                            <button type="button" class="btn btn-outline-success"
                                                    onclick="convertirAPrestamo(@reserva.Id)" title="Convertir a préstamo">
                                                <i class="fas fa-arrow-right"></i>
                                            </button>
                                        }

                                        @if (reserva.Estado == "Activa")
                                        {
                                            <button type="button" class="btn btn-outline-warning"
                                                    onclick="cancelarReserva(@reserva.Id)" title="Cancelar reserva">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        }

                                        <a asp-action="Edit" asp-route-id="@reserva.Id"
                                           class="btn btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@reserva.Id"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-bookmark fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay reservas registradas</h4>
                <p class="text-muted">Comienza creando tu primera reserva.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Crear Primera Reserva
                </a>
            </div>
        }
    </div>
</div>

<!-- Modal de confirmación para convertir a préstamo -->
<div class="modal fade" id="modalConvertir" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-arrow-right me-2 text-success"></i>Convertir a Préstamo
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que quieres convertir esta reserva en un préstamo?</p>
                <p class="text-muted">La reserva se marcará como convertida y se creará un nuevo préstamo activo.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="formConvertir" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-arrow-right me-2"></i>Convertir a Préstamo
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación para cancelar reserva -->
<div class="modal fade" id="modalCancelar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-ban me-2 text-warning"></i>Cancelar Reserva
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que quieres cancelar esta reserva?</p>
                <p class="text-muted">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, mantener</button>
                <form id="formCancelar" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-ban me-2"></i>Sí, cancelar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function convertirAPrestamo(reservaId) {
            document.getElementById('formConvertir').action = '@Url.Action("ConvertirAPrestamo")/' + reservaId;
            new bootstrap.Modal(document.getElementById('modalConvertir')).show();
        }

        function cancelarReserva(reservaId) {
            document.getElementById('formCancelar').action = '@Url.Action("CancelarReserva")/' + reservaId;
            new bootstrap.Modal(document.getElementById('modalCancelar')).show();
        }
    </script>
}